# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock -c 001842 --nofork
# Bind Ctrl-Mod-L to trigger i3Lock 
bindsym Ctrl+$mod+l exec "i3lock -c 001842"
# xautolock
exec xautolock -time 10 -locker "i3lock -c 001842"

